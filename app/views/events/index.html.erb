<div class="pages col-md-9">
  <h1 id='header'>Events</h1>
  <p id="notice"><%= notice %></p>

  <div class="row">
    <% @events.each do |event| %>
      <div class="events col-sm-4 events">
        <h4><b><%= event.event_name %></b></h4>
        <p><%= event.location %><br/>
          <%= event.date.strftime("%B %-d, %Y") %></p>
      </div>
      <br/>
    <% end %>
  </div>
</div>

