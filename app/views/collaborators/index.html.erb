<p id="notice"><%= notice %></p>

<h2>Individual Collaborators</h2>
<p>These individuals have either inspired or directly contributed to Bits and Bytes collaboartive AI.</p>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Website</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator.type %></td>
        <td><%= collaborator.name %></td>
        <td><%= collaborator.website %></td>
        <td><%= collaborator.image %></td>
        <td><%= link_to 'Show', collaborator %></td>
        <td><%= link_to 'Edit', edit_collaborator_path(collaborator) %></td>
        <td><%= link_to 'Destroy', collaborator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

