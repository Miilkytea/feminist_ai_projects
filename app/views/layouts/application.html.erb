<!DOCTYPE html>
<html>
  <head>
    <title>FeministAi</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'shared/nav' %>
    <div class="content">
      <div class="under-shape-one"></div>
      <%= yield %>
      <!--<div class="under-shape-two"></div>-->
    </div>
    <%= render 'shared/footer' %>
  </body>
</html>

<!-- randomly-placed-icon -->

<%= image_tag 'icon1.png', class: 'randomly-placed-icon' %>
<%= image_tag 'icon2.png', class: 'randomly-placed-icon' %>
<%= image_tag 'icon3.png', class: 'randomly-placed-icon' %>

<script>
function rand0To100() {
  return Math.floor(Math.random() * 100);
}

$('.randomly-placed-icon').each(function() {
  $(this).css({top: rand0To100() + '%', left: rand0To100() + '%'});
});
</script>
