    <h1 id='header'>Design Philosophy</h1>

    <div>
      <%= image_tag 'feminist-artificial-intelligence_philosophy_flier1.jpg', width: "400", alt:'', class: "photos" %>
      <%= image_tag 'feminist-artificial-intelligence_philosophy_flier2.jpg', width: "400", alt:'', class: "photos" %>
